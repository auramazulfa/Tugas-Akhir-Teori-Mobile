<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgroundmasjid"
            android:alpha="0.75"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:layout_marginVertical="@dimen/margin_vertical"
            android:alpha="0.8">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/bismillah" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="475dp"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:layout_marginVertical="112dp"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:alpha="0.9">

            <Button
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginHorizontal="@dimen/margin_vertical"
                android:id="@+id/btn_lokasi"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableStart="@drawable/add_location"
                android:text="Pilih Lokasi"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_tanggal"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="@dimen/margin_vertical"
                android:drawableStart="@drawable/tanggal"
                android:text="Pilih Tanggal"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/margin_vertical"
                android:paddingVertical="@dimen/margin_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/backgroundText"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_horizontal"
                        android:text="Imsak"
                        android:textColor="@android:color/black"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/tv_imsak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_horizontal"
                        tools:text="Waktu Imsak"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/black"
                        android:textSize="19sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_horizontal"
                        android:text="Subuh"
                        android:textColor="@android:color/black"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/tv_shalat_subuh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_horizontal"
                        tools:text="Waktu Subuh"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/black"
                        android:textSize="19sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/backgroundText"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_horizontal"
                        android:text="Dhuha"
                        android:textColor="@android:color/black"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/tv_shalat_dhuha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_horizontal"
                        tools:text="Waktu Dhuha"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/black"
                        android:textSize="19sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_horizontal"
                        android:text="Dzuhur"
                        android:textColor="@android:color/black"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/tv_shalat_dzuhur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_horizontal"
                        tools:text="Waktu Dzuhur"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/black"
                        android:textSize="19sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/backgroundText"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_horizontal"
                        android:text="Ashar"
                        android:textColor="@android:color/black"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/tv_shalat_ashar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_horizontal"
                        tools:text="Waktu Ashar"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/black"
                        android:textSize="19sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_horizontal"
                        android:text="Maghrib"
                        android:textColor="@android:color/black"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/tv_shalat_maghrib"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_horizontal"
                        tools:text="Waktu Maghrib"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/black"
                        android:textSize="19sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/backgroundText"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_horizontal"
                        android:text="Isya"
                        android:textColor="@android:color/black"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/tv_shalat_isya"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_horizontal"
                        tools:text="Waktu Isya"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/black"
                        android:textSize="19sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
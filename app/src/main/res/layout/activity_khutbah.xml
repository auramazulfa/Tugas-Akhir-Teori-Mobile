<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_khutbah_container"
    tools:context=".view.activity.KhutbahActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/khutbah"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RANGKUMAN ISI KHUTBAH"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_vertical"
            android:textColor="@android:color/black"/>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waktu"
                android:textColor="@android:color/black"
                android:textSize="17sp"/>

            <EditText
                android:id="@+id/et_waktu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ex : 25 juli 2000"
                android:textSize="15sp"/>

            <TextView
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:text="Nama Khatib" />

            <EditText
                android:id="@+id/et_khatib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan jika tau"
                android:textSize="15sp"/>

            <TextView
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:text="Isi Khutbah"/>

            <EditText
                android:id="@+id/et_khutbah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tuliskan Isi khutbah"
                android:textSize="15sp"
                android:inputType="textMultiLine"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vertical"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_simpan"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="SIMPAN" />

                <Button
                    android:id="@+id/btn_catatan"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Lihat Catatan"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>